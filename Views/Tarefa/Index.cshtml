@model IEnumerable<TarefaWeb.Models.Tarefa>
<h1>Tarefa</h1>

<div class="col-md-offset-11">
    <a asp-controller="Tarefa" asp-action="Create" class="btn btn-primary" >Novo</a>
</div>
<hr>
<table class="table table-hover table-condensed table-responsive"> 
    <thead>
      <tr>
        <th>Ação</th>
        <th>Código</th>
        <th>Nome</th>
        <th>Concluido</th>
      </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                <a class="btn btn-success" asp-action="Update" asp-controller="Tarefa" asp-route-id="@item.TarefaId" >Alterar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-controller="Tarefa" asp-route-id="@item.TarefaId">Excluir</a>
            </td>
            <td>@item.TarefaId</td>
            <td>@item.Nome</td>
            <td>@item.Concluida</td>
        </tr>
    }
    </tbody>
</table>